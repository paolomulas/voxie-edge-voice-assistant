# --- Core paths ---
VOXIEROOT=/path/to/bitvox
VOXIELANG=it


# --- IPC (inter-process communication) ---
VOXIEPTTFIFO=/tmp/bitvox_ptt.fifo
VOXIEAUDIOSOCK=/tmp/bitvox_audio.sock


# --- Audio input ---
# Example: USB 2.4GHz mic with integrated sound card
VOXIEMICDEV=plughw:1,0
VOXIERECSEC=4


# --- Wake / VAD (optional) ---
VOXIEWAKESR=16000
VOXIEWAKECHUNKMS=20


# --- LLM / ASR providers (model-agnostic) ---
# Provide keys via env or shell export
OPENAI_API_KEY=__PUT_KEY_HERE__
LLM_API_KEY=__PUT_KEY_HERE__


# Default LLM configuration (can be swapped with other providers)
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=150
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=15


# --- Text-to-Speech (runtime, low latency) ---
TTS_ENGINE=openai
TTS_MODEL=tts-1
TTS_VOICE=alloy
TTS_FORMAT=mp3
TTS_FALLBACK_ENGINE=espeak


# --- Optional: expressive voices (build-time assets) ---
# Used only for pre-generated content (not required at runtime)
ELEVENLABS_API_KEY=__OPTIONAL__
ELEVENLABS_MODEL=eleven_multilingual_v2
ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128


# --- PHP entrypoints (override only if needed) ---
VOXIEASRPHP=/path/to/bitvox/php/bin/asr.php
VOXIEAGENTPHP=/path/to/bitvox/php/bin/agent.php


# --- Debug / logging (optional) ---
DEBUG=0
LOG_LLM=0
LOG_AUDIO=0